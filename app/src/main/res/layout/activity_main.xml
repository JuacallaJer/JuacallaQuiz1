<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="com.juacalla.juacallaquiz1.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="62dp"
        android:text="Institute of Information and Computing Sciences"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="25dp"
        android:textStyle="bold" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BS COMPUTER SCIENCE"
        android:onClick="callSecond"
        android:id="@+id/button2"
        android:layout_marginTop="192dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BS INFORMATION TECHNOLOGY"
        android:onClick="callThird"
        android:id="@+id/button"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BS INFORMATION SYSTEMS"
        android:onClick="callFourth"
        android:id="@+id/button3"
        android:layout_marginTop="69dp"
        android:layout_alignTop="@+id/button"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
